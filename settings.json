// Zed settings
//
// For information on how to configure Zed, see the Zed documentation:
// https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your custom settings,
// run `zed: open default settings` from the command palette (cmd-shift-p /
// ctrl-shift-p)
{
  "prettier": {
    "allowed": false
  },
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_menus": true
  },
  "redact_private_values": true,
  "confirm_quit": true,
  "agent": {
    "enabled": false
  },
  "icon_theme": {
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
    "mode": "system"
  },
  "outline_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "centered_layout": {
    "left_padding": 0.05,
    "right_padding": 0.05
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "auto_reveal_entries": true,
    "folder_icons": true,
    "file_icons": true,
    "hide_gitignore": false,
    "indent_size": 20.0,
    "entry_spacing": "comfortable",
    "hide_root": true,
    "sticky_scroll": false,
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "use_autoclose": true,
  "ui_font_size": 15.0,
  "buffer_font_size": 16,
  "buffer_font_family": ".ZedMono",
  "buffer_line_height": {
    "custom": 2.0
  },
  "ui_font_family": ".ZedMono",
  "ui_font_weight": 500,
  "unstable.ui_density": "comfortable",
  "restore_on_startup": "last_workspace",
  "preview_tabs": {
    "enabled": false
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "theme": {
    "dark": "Ayu Dark",
    "light": "Ayu Light",
    "mode": "system"
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": false
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    },
    "font_family": ".ZedMono",
    "font_fallbacks": ["Cascadia Code NF"],
    "font_size": 16,
    "env": {
      "EDITOR": "zed --wait"
    },
    "cursor_shape": "bar"
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "active_line_width": 3,
    "line_width": 2,
    "background_coloring": "disabled",
    "enabled": true,
    "coloring": "fixed"
  },
  "relative_line_numbers": false,
  "wrap_guides": [100],
  "show_wrap_guides": true,
  "auto_install_extensions": {
    "basher": true,
    "cargo-appraiser": true,
    "catppuccin-icons": true,
    "crates-lsp": true,
    "git-firefly": true,
    "golangci-lint": true,
    "gosum": true,
    "html": true,
    "just": true,
    "kotlin": true,
    "log": true,
    "make": true,
    "package-swift-lsp": true,
    "ruby": true,
    "swift": true,
    "templ": true,
    "toml": true
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "languages": {
    "TSX": {
      "prettier": {
        "allowed": true
      }
    },
    "TypeScript": {
      "prettier": {
        "allowed": true
      }
    },
    "Shell Script": {
      "formatter": { "external": { "command": "shfmt" } }
    },
    "Go": {
      "language_servers": ["gopls", "golangci-lint"],
      "inlay_hints": {
        "show_background": true,
        "show_parameter_hints": false,
        "show_other_hints": false,
        "enabled": true
      }
    },
    "Templ": {
      "formatter": "language_server",
      "format_on_save": "on",
      "use_autoclose": false,
      "language_servers": ["templ", "tailwindcss-language-server"],
      "jsx_tag_auto_close": {
        "enabled": true
      }
    },
    "Swift": {
      "completions": {
        "lsp_fetch_timeout_ms": 0
      },
      "hard_tabs": true,
      "formatter": { "external": { "command": "swift-format" } },
      "inlay_hints": {
        "show_background": true,
        "show_parameter_hints": false,
        "show_other_hints": false,
        "enabled": true
      }
    },
    "Rust": {
      "inlay_hints": {
        "show_background": true,
        "show_parameter_hints": false,
        "show_other_hints": false,
        "enabled": true
      }
    },
    "Vue.js": {
      "inlay_hints": {
        "show_background": true,
        "show_parameter_hints": false,
        "show_other_hints": false,
        "enabled": true
      },
      "jsx_tag_auto_close": { "enabled": true }
    }
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html"
        }
      }
    },
    "vscode-html-language-server": {
      "settings": {
        "html": {
          "suggest": {
            "html5": true,
            "angular1": true,
            "ionic": true
          },
          "validate": {
            "scripts": true,
            "styles": true
          },
          "format": {
            "wrapLineLength": 120,
            "unformatted": "wbr,code,pre"
          },
          "includeLanguages": {
            "templ": "html",
            "Templ": "html"
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  }
}
