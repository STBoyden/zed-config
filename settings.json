// Zed settings
//
// For information on how to configure Zed, see the Zed documentation:
// https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your custom settings,
// run `zed: open default settings` from the command palette (cmd-shift-p /
// ctrl-shift-p)
{
  "agent": {
    "enabled": false
  },
  "icon_theme": "Catppuccin Frapp√©",
  "outline_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show": true
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "project_panel": {
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "use_autoclose": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Iosevka Nerd Font",
  "ui_font_family": "Iosevka Nerd Font",
  "ui_font_weight": 500,
  "unstable.ui_density": "comfortable",
  "restore_on_startup": "none",
  "vim_mode": false,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "theme": "Yogi Amoled",
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": false
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    },
    "cursor_shape": "bar"
  },
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "relative_line_numbers": false,
  "wrap_guides": [100],
  "show_wrap_guides": true,
  "auto_install_extensions": {
    "ir-black": true,
    "just": true,
    "catppuccin-icons": true,
    "log": true,
    "make": true,
    "git-firefly": true,
    "toml": true,
    "html": true,
    "templ": true,
    "swift": true,
    "package-swift-lsp": true,
    "golangci-lint": true,
    "gosum": true,
    "cargo-appraiser": true,
    "yogi-amoled": true,
    "kotlin": true
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls", "golangci-lint"],
      "inlay_hints": {
        "show_background": true,
        "show_parameter_hints": false,
        "show_other_hints": false,
        "enabled": true
      }
    },
    "Templ": {
      "formatter": "language_server",
      "format_on_save": "on",
      "use_autoclose": false,
      "language_servers": ["templ", "tailwindcss-language-server"]
    },
    "Swift": {
      "formatter": { "external": { "command": "swiftformat" } }
    }
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html"
        }
      }
    },
    "vscode-html-language-server": {
      "settings": {
        "html": {
          "suggest": {
            "html5": true,
            "angular1": true,
            "ionic": true
          },
          "validate": {
            "scripts": true,
            "styles": true
          },
          "format": {
            "wrapLineLength": 120,
            "unformatted": "wbr,code,pre"
          },
          "includeLanguages": {
            "templ": "html",
            "Templ": "html"
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  }
}
